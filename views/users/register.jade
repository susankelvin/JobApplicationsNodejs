extends ../shared/layout

block content
    h1 Register
    br
    form.form-horizontal(action="/users/register", method="post", role="form")
        div.form-group
            label.control-label.col-md-2(for="username") Username
            div.col-md-10
                input.form-control(type="text", name="username", placeholder="Username")
        div.form-group
            label.control-label.col-md-2(for="password") Password
            div.col-md-10
                input.form-control(type="password", name="password", placeholder="Password")
        div.form-group
            label.control-label.col-md-2(for="confirm-password") Confirm password
            div.col-md-10
                input.form-control(type="password", name="confirm-password",placeholder="Confirm password")
        div.form-group
            div.col-md-10.col-md-offset-2
                button.btn.btn-primary(type="submit") Register
                | &nbsp;
                a.btn.btn-success(href="/") Cancel
